<div class="control-group">
  <input class="lastName-field" name="lastName" type="text" placeholder="{{labels.users.lastname}}" value="{{model.firstName}}" />
  <span class="help-inline"></span>
</div>
<div class="control-group">
 <input class="firstName-field" name="firstName" type="text" placeholder="{{labels.users.firstname}}" value="{{model.firstName}}" />
</div>
<div class="control-group">
 <input class="email-field" name="email" type="text" placeholder="{{labels.users.email}}" value="{{model.email}}" />
</div>
<div class="control-group">
 <input class="login-field" name="login" type="text" placeholder="{{labels.users.login}}" value="{{model.login}}" />
</div>
<div class="control-group">
 <input class="password-field" name="password" type="text" placeholder="{{labels.users.password}}" value="{{model.password}}" />
</div>

<div class="user-roles-list block">
<div class="add-role block">
	<input class="role-name-list" name="role-name" type="text" placeholder="{{labels.users.roles.name}}"  />
	<input class="btn add-role-btn" name="name" type="button" value="{{labels.users.roles.add}}"  />
</div>
</div>
<div class="user-groups-list block">
<div class="add-group block">
	<input class="group-name-list" name="group-name" type="text" placeholder="{{labels.users.groups.name}}"  />
	<input class="btn add-group-btn" name="name" type="button" value="{{labels.users.groups.add}}"  />
</div>
</div>

<div class="btn-group">
  <button type="submit" class="btn btn-success" title="{{labels.general.save}}"><i class="icon-edit icon-white"></i></button>
  <button type="button" class="btn btn-danger delete" title="{{labels.general.delete}}"><i class="icon-trash icon-white"></i></button>
  <button type="button" class="btn cancel" title="{{labels.general.cancel}}"><i class="icon-chevron-up"></i></button>
</div>