    <bean id="userService" class="org.resthub.identity.core.service.AbstractUserService" />
    <bean id="roleService" class="org.resthub.identity.core.service.AbstractRoleService" />
    <bean id="groupService" class="org.resthub.identity.core.service.AbstractGroupService" />
    <bean id="applicationService" class="org.resthub.identity.core.service.AbstractApplicationService" />
    <bean id="permissionService" class="org.resthub.identity.core.service.AbstractPermissionService" />
    -->
</beans>